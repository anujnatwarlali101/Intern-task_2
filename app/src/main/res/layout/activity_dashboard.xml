<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:id="@+id/drawer_dashboard_layout"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_layout_students" />
        <TextView
            android:layout_marginTop="100dp"
            android:id="@+id/dashboard_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_layout_students"
            android:text="Welcome to your Personalised dashboard"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textColor="@color/colordashboardtext"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_alarm_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_textview"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/dashboard_textview"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonalarm"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/Alarm_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/alrm_logo"
                    />
                <TextView
                    android:id="@+id/alarm_textview"
                    android:layout_below="@+id/Alarm_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_calci_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_textview"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@+id/dashboard_textview"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonCalci"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/calci_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/calci_logo"
                    />
                <TextView
                    android:id="@+id/calci_textview"
                    android:layout_below="@+id/calci_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculator"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_browse_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_alarm_CardView"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/dashboard_textview"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonbrowse"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/browse_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/browse_logo"
                    />
                <TextView
                    android:id="@+id/browse_textview"
                    android:layout_below="@+id/browse_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browser"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_fb_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_calci_CardView"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@+id/dashboard_textview"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonfb"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/fb_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/facebook_logo"
                    />
                <TextView
                    android:id="@+id/fb_textview"
                    android:layout_below="@+id/fb_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_email_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_browse_CardView"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/dashboard_textview"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonemail"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/email_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/email_logo"
                    />
                <TextView
                    android:id="@+id/email_textview"
                    android:layout_below="@+id/email_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_call_CardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/dashboard_fb_CardView"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@+id/dashboard_textview"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtoncall"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/call_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cc_logo"
                    />
                <TextView
                    android:id="@+id/call_textview"
                    android:layout_below="@+id/call_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Us"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_drawer_dashboard"
        android:layout_gravity = "start"
        app:menu="@menu/navigation_drawer_menu"
        app:headerLayout="@layout/header_layout">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>